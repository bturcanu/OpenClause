{
  "allowlist": {
    "read_actions": [
      "jira.issue.list",
      "jira.issue.get",
      "jira.project.list",
      "slack.channel.list",
      "slack.channel.info",
      "slack.msg.list",
      "slack.user.list"
    ],
    "write_actions": [
      "slack.msg.post",
      "jira.issue.create",
      "jira.issue.comment",
      "jira.issue.update"
    ],
    "destructive_actions": [
      "jira.issue.delete",
      "jira.project.delete",
      "slack.channel.archive",
      "slack.channel.delete"
    ]
  },
  "tenants": {
    "tenant1": {
      "name": "Acme Corp",
      "max_risk_auto_approve": 5,
      "approver_group": "security",
      "notify": [
        {
          "kind": "webhook",
          "url": "http://localhost:8090/hooks/approvals",
          "secret_ref": "tenant1_webhook"
        },
        {
          "kind": "slack",
          "channel": "#security-approvals"
        }
      ]
    },
    "tenant2": {
      "name": "Globex Inc",
      "max_risk_auto_approve": 3,
      "approver_group": "ops",
      "notify": []
    }
  }
}
